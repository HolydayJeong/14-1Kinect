<Window x:Class="EatingFruit.Fruit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1000" Width="1300" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid HorizontalAlignment="Left" Height="960" Margin="10,-16,-4,-4" VerticalAlignment="Top" Width="1280">
        <Canvas x:Name="canvas1" HorizontalAlignment="Center" Height="960" Margin="-10,35,0,-35" VerticalAlignment="Center" Width="1280">
            <Image x:Name="Screen" Height="960" Width="1280" Canvas.Top="10"/>
            <Image x:Name="Background1" Height="960" Width="1320" Canvas.Top="10" Source="Images/bg.png" Canvas.Left="-10"/>
            <Image x:Name="Background2" Height="960" Width="1320" Source="Images/bg_cloud.png" Canvas.Top="-155" Canvas.Left="-10" />
            <Image x:Name="SungHwa" Height="360" Canvas.Left="1000" Canvas.Top="590" Width="245" Source="Images/sung_basket.png"/>
            <Image x:Name="Hand" Height="110" Canvas.Left="1145" Width="125" Source="Images/Hand.png" Canvas.Top="35"/>
            <TextBox x:Name="Score" Height="160" Canvas.Left="983" TextWrapping="Wrap" Canvas.Top="35" Width="265" FontSize="120" Background="Transparent" FontFamily="Yj CHMSOOT Bold" FontWeight="Bold"/>
            <Image x:Name="Replay" Height="165" Canvas.Left="680" Canvas.Top="440" Width="180" RenderTransformOrigin="0.472,0.058"/>
            <Image x:Name="Home" Height="165" Canvas.Left="460" Canvas.Top="440" Width="180"/>
            <Image x:Name="Ready" HorizontalAlignment="Left" Height="165" VerticalAlignment="Top" Width="390" Canvas.Left="510" Canvas.Top="315"/>
            <Image x:Name="Go" HorizontalAlignment="Left" Height="120" VerticalAlignment="Top" Width="230" Canvas.Left="595" Canvas.Top="320"/>
            <Image x:Name="_1000" Height="170" Canvas.Left="460" Canvas.Top="200" Width="90"/>
            <Image x:Name="_100" Height="170" Canvas.Left="560" Canvas.Top="200" Width="90"/>
            <Image x:Name="_10" Height="170" Canvas.Left="645" Canvas.Top="200" Width="90"/>
            <Image x:Name="_1" Height="170" Canvas.Left="735" Canvas.Top="200" Width="90"/>
        </Canvas>
    </Grid>
</Window>